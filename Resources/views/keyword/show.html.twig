{% extends 'base.html.twig' %}

{% block title %}Keyword{% endblock %}

{% block body %}
    <h1>Keyword</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ keyword.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ keyword.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ keyword.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ keyword.createdAt ? keyword.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ keyword.updatedAt ? keyword.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mh_page_keyword_index') }}">back to list</a>

    <a href="{{ path('mh_page_keyword_edit', {'id': keyword.id}) }}">edit</a>

    {{ include('@MhPage/keyword/_delete_form.html.twig') }}
{% endblock %}
