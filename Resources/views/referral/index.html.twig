{% extends 'base.html.twig' %}

{% block title %}Referral index{% endblock %}

{% block body %}
<h1>Referral index</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Referral</th>
            <th>Attribute</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
        </tr>
    </thead>
    <tbody>
        {% for referral in referrals %}
        <tr>
            <td>{{ referral.id }}</td>
            <td>{{ referral.user.email }}</td>
            <td>{{ referral.referral.email }}</td>
            <td>{{ referral.attribute }}</td>
            <td>{{ referral.createdAt ? referral.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ referral.updatedAt ? referral.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
