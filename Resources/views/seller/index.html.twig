{% extends 'base.html.twig' %}

{% block title %}Seller index{% endblock %}

{% block body %}
    <h1>Seller index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seller in sellers %}
            <tr>
                <td>{{ seller.id }}</td>
                <td>{{ seller.name }}</td>
                <td>{{ seller.createdAt ? seller.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ seller.updatedAt ? seller.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('mh_page_seller_show', {'id': seller.id}) }}">show</a>
                    <a href="{{ path('mh_page_seller_edit', {'id': seller.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mh_page_seller_new') }}">Create new</a>
{% endblock %}
