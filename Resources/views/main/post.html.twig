{% extends "layout.html.twig" %}

{% block body %}
<div id="blog" class="single-post">
    <div class="post-item">
        <div class="post-item-wrap">
            {% include "@MhPage/main/blog_media.html.twig" %}

            <div class="post-item-description">
                <h2>{{ post.title }}</h2>
                <div class="post-meta">
                    <span class="post-meta-date"><i class="fa fa-calendar-o"></i>{{ post.createdAt|date('M j, Y') }}</span>
                    <span class="post-meta-comments"><a href=""><i class="fa fa-comments-o"></i>0 Comments</a></span>
                    <span class="post-meta-category"><a href=""><i class="fa fa-tag"></i>{% for tag in post.tags %}{{ tag.name }}{% if loop.last == false %}, {% endif %}{% endfor %}</a></span>
                </div>
                {{ post.content|raw }}
            </div>
            <div class="post-tags">
                {% for tag in post.tags %}
                <a href="#">{{ tag.name }}</a>
                {% endfor %}
            </div>
            <div class="post-navigation">
                {% if prev %}
                <a href="{{ path('mh_page_main_post', {'id':prev.id}) }}" class="post-prev">
                    <div class="post-prev-title"><span>Previous Post</span>{{ prev.title }}</div>
                </a>
                {% endif %}
                <a href="{{ path('mh_page_main') }}" class="post-all">
                    <i class="icon-grid"> </i>
                </a>
                {% if next %}
                <a href="{{ path('mh_page_main_post', {'id':next.id}) }}" class="post-next">
                    <div class="post-next-title"><span>Next Post</span>{{ next.title }}</div>
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
