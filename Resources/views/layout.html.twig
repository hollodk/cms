{% set config = page.pageConfig %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="author" content="{% block author %}{{ config.author }}{% endblock %}" />
        <meta name="description" content="{% block description %}{{ config.description }}{% endblock %}">

        <title>{% block title %}{{ site.title }}{% endblock %}</title>

        <link href="{{ asset('bundles/mhpage/css/plugins.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/mhpage/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/mhpage/css/responsive.css') }}" rel="stylesheet">

        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        <div class="body-inner">
            {% include "@MhPage/main/topbar.html.twig" %}
            {% include "@MhPage/main/header.html.twig" %}

            <main id="main">
            {% block body %}{% endblock %}
            </main>

            {% include "@MhPage/main/footer.html.twig" %}
        </div>

        <a id="scrollTop"><i class="icon-chevron-up1"></i><i class="icon-chevron-up1"></i></a>
        <script src="{{ asset('bundles/mhpage/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/mhpage/js/plugins.js') }}"></script>
        <script src="{{ asset('bundles/mhpage/js/functions.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
