{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CouponCode</th>
                <th>Description</th>
                <th>OfferUrl</th>
                <th>ValidFrom</th>
                <th>ValidTo</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.couponCode }}</td>
                <td>{{ coupon.description }}</td>
                <td>{{ coupon.offerUrl }}</td>
                <td>{{ coupon.validFrom ? coupon.validFrom|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.validTo ? coupon.validTo|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.createdAt ? coupon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.updatedAt ? coupon.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('mh_page_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('mh_page_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mh_page_coupon_new') }}">Create new</a>
{% endblock %}
