{% extends 'base.html.twig' %}

{% block title %}Coupon{% endblock %}

{% block body %}
    <h1>Coupon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>CouponCode</th>
                <td>{{ coupon.couponCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ coupon.description }}</td>
            </tr>
            <tr>
                <th>OfferUrl</th>
                <td>{{ coupon.offerUrl }}</td>
            </tr>
            <tr>
                <th>ValidFrom</th>
                <td>{{ coupon.validFrom ? coupon.validFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ValidTo</th>
                <td>{{ coupon.validTo ? coupon.validTo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ coupon.createdAt ? coupon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ coupon.updatedAt ? coupon.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mh_page_coupon_index') }}">back to list</a>

    <a href="{{ path('mh_page_coupon_edit', {'id': coupon.id}) }}">edit</a>

    {{ include('@MhPage/coupon/_delete_form.html.twig') }}
{% endblock %}
