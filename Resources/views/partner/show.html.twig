{% block title %}Partner{% endblock %}

{% block body %}
    <h1>Partner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>UrlAffiliate</th>
                <td>{{ partner.urlAffiliate }}</td>
            </tr>
            <tr>
                <th>LogoUrl</th>
