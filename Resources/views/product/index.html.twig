{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductReference</th>
                <th>ProductName</th>
                <th>Slug</th>
                <th>Price</th>
                <th>PriceDiscount</th>
                <th>ImageUrl</th>
                <th>UrlRedirect</th>
                <th>DiscountPercentage</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.productReference }}</td>
                <td>{{ product.productName }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.priceDiscount }}</td>
                <td>{{ product.imageUrl }}</td>
                <td>{{ product.urlRedirect }}</td>
                <td>{{ product.discountPercentage }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('mh_page_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('mh_page_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mh_page_product_new') }}">Create new</a>
{% endblock %}
