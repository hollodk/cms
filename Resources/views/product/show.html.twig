{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>ProductReference</th>
                <td>{{ product.productReference }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ product.productName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>PriceDiscount</th>
                <td>{{ product.priceDiscount }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ product.imageUrl }}</td>
            </tr>
            <tr>
                <th>UrlRedirect</th>
                <td>{{ product.urlRedirect }}</td>
            </tr>
            <tr>
                <th>DiscountPercentage</th>
                <td>{{ product.discountPercentage }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mh_page_product_index') }}">back to list</a>

    <a href="{{ path('mh_page_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('@MhPage/product/_delete_form.html.twig') }}
{% endblock %}
